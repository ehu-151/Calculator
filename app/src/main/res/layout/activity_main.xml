<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    ​
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="0"
        android:textSize="60dp" />
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        ​
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:onClick="numClick"
            android:tag="C"
            android:text="C"
            android:textSize="40dp" />
        ​
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="markClick"
            android:tag="3"
            android:text="÷"
            android:textSize="40dp" />
    </LinearLayout>
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        ​
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="7"
            android:text="7"
            android:textSize="40dp" />
        ​
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="8"
            android:text="8"
            android:textSize="40dp" />
        ​
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="9"
            android:text="9"
            android:textSize="40dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="markClick"
            android:tag="2"
            android:text="×"
            android:textSize="40dp" />
        ​
    </LinearLayout>
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        ​
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="4"
            android:text="4"
            android:textSize="40dp" />
        ​
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="5"
            android:text="5"
            android:textSize="40dp" />
        ​
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="6"
            android:text="6"
            android:textSize="40dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="markClick"
            android:tag="1"
            android:text="ー"
            android:textSize="40dp" />
        ​
    </LinearLayout>
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        ​
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="1"
            android:text="1"
            android:textSize="40dp" />
        ​
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="2"
            android:text="2"
            android:textSize="40dp" />
        ​
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="3"
            android:text="3"
            android:textSize="40dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="markClick"
            android:tag="0"
            android:text="+"
            android:textSize="40dp" />
        ​
        ​
    </LinearLayout>
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        ​
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="numClick"
            android:tag="0"
            android:text="0"
            android:textSize="40dp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numClick"
            android:tag="0"
            android:text="."
            android:textSize="40dp" />
        ​
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="equalClick"
            android:text="="
            android:textSize="40dp" />
        ​
        ​
    </LinearLayout>
    ​
</LinearLayout>